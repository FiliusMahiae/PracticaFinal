POST http://localhost:8080/api/client
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "name": "Sergio Mahía",
  "email": "sergio.mahiarello@gmail.com",
  "phone": "667514865",
  "address": {
    "street": "Calle Super Real",
    "number": 12,
    "postal": 28047,
